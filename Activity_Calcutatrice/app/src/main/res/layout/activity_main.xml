<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/Calculatrice"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:background="#673AB7"
        android:paddingTop="15dp"
        android:text="Calculatrice"
        android:textAlignment="viewStart"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:backgroundTint="#000000"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:paddingRight="15dp">

        <TextView
            android:id="@+id/EditTextResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#A4A4A4"
            android:text="0"
            android:textAlignment="viewEnd"
            android:textColor="#ff0000"
            android:textSize="48sp" />

        <Button
            android:id="@+id/buttonAC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:background="#E07E21"
            android:text="AC"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button1"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:text="1"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/button4"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:text="4"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/button7"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:text="7"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/button0"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:text="0"
                    android:textSize="24sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button2"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:text="2"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/button5"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:text="5"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/button8"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:text="8"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/buttonPoint"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:text="."
                    android:textSize="48sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button3"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:text="3"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/button6"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:text="6"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/button9"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:text="9"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/buttonEgal"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:text="="
                    android:textSize="48sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/buttonAddition"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:backgroundTint="#E07E21"
                    android:text="+"
                    android:textSize="48sp" />

                <Button
                    android:id="@+id/buttonSoustracion"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:backgroundTint="#E07E21"
                    android:text="-"
                    android:textSize="48sp" />

                <Button
                    android:id="@+id/buttonDivision"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:backgroundTint="#E07E21"
                    android:text="รท"
                    android:textSize="48sp" />

                <Button
                    android:id="@+id/buttonMultiplication"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:backgroundTint="#E07E21"
                    android:text="ร"
                    android:textSize="48sp" />
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="381dp"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:src="@drawable/image_calculette" />

    </LinearLayout>
</LinearLayout>